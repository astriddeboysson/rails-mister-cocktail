<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://timeincsecure-a.akamaihd.net/rtmp_uds/474428695/201806/1980/474428695_5796352796001_5796343805001-vs.jpg?pubId=474428695&videoId=5796343805001);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container mt-5">
  <h1>Ingredients</h1>
    <% @cocktail.doses.each do |dose| %>
      <p id="delete"><strong><%="#{dose.ingredient.name}"%></strong><%= "- #{dose.description} (" %>
        <%=
        link_to "Delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Delete #{dose.ingredient.name}?" }
      %> )</p>
    <% end %>

    <%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail), :class => "btn"  %>
    <p class= "mt-3"><%= link_to "Back to list", cocktails_path, :class => "btn"%></p>
</div>
