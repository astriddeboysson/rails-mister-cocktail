<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container mt-5">
  <h1>Ingredients</h1>
    <% @cocktail.doses.each do |dose| %>
      <p id="delete"><strong><%="#{dose.ingredient.name}"%></strong><%= "- #{dose.description} (" %>
        <%=
        link_to "Delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Delete #{dose.ingredient.name}?" }
      %> )</p>
    <% end %>

    <%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail), :class => "btn"  %>
    <p class= "mt-3"><%= link_to "Back to list", cocktails_path, :class => "btn"%></p>
</div>
